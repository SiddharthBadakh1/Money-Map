body {
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 0;
}

header {
  background-color: #282729;
  color: white;
  padding: 15px 0;
  text-align: center;
}

nav ul {
  list-style-type: none;
  margin: 0;
  padding: 0;
}

nav ul li {
  display: inline;
  margin: 0 15px;
}

nav ul li a {
  color: white;
  text-decoration: none;
}

main {
  padding: 20px;
}

.profile-section {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20px;
}

.profile,
.scholarship {
  border: 1px solid #ddd;
  padding: 20px;
  border-radius: 10px;
  width: 48%;
}

.profile-photo {
  width: 100px;
  height: 100px;
  border-radius: 50%;
}

.profile-info {
  text-align: center;
}

.charts {
  margin-top: 20px;
}

.courses-section,
.articles-section {
  margin-bottom: 20px;
  border-radius: 20px;
}

.courses,
.articles {
  display: flex;
  justify-content: space-around;
}

.course-card,
.article-card {
  border: 1px solid #ddd;
  padding: 20px;
  border-radius: 10px;
  width: 30%;
  text-align: center;
}

.iframe-container {
  width: 70%; /* Ensure the container takes full width */
  height: 0;
  padding-bottom: 56.25%; /* Aspect ratio (height/width) for a 16:9 ratio */
  position: relative;
  border-radius: 20px;
}

.iframe-container iframe {
  position: absolute;
  top: 0;
  left: 0;
  width: 70%;
  height: 100%;
  border: none;
  border-radius: 20px;
}

footer {
  background-color: #4caf50;
  color: white;
  text-align: center;
  padding: 10px 0;
  position: fixed;
  width: 100%;
  bottom: 0;
}

